{
  "name": "xhr-async",
  "version": "1.3.1",
  "description": "Async/await ajax APIs with golang-like error handling, built on top of axios",
  "main": "dist/xhr-async.js",
  "types": "dist/xhr-async.d.ts",
  "scripts": {
    "build": "npm run clean && tsc src/xhr-async.ts --outDir ./dist --sourceMap --target ES5 --lib ES2015 --declaration",
    "dev": "tsc",
    "clean": "rm -rf ./build ./dist",
    "test": "npm run dev && ava --verbose build/*.spec.js",
    "format": "prettier src/*.{js,ts}",
    "watch": "chokidar 'src/**/*.*' -c 'npm run test'"
  },
  "keywords": [],
  "author": "Tan Nhu",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.16.2"
  },
  "devDependencies": {
    "@types/node": "latest",
    "ava": "^0.22.0",
    "chokidar-cli": "latest",
    "prettier": "^1.6.1",
    "tslint": "^5.7.0",
    "typescript": "latest"
  }
}
